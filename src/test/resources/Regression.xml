    </test> <!-- Test -->
    <test name="ProductPage Tests"><!-- Test -->
        <parameter name="browser" value="opera"></parameter>
        <classes>
            <class name="tests.AbilityToOpenProductPageTest"/>
            <class name="tests.AbilityToAddRemoveProductFromProductPage"/>
        </classes>
    </test> <!-- Test -->
